<!--pages/message/message.wxml-->

<view class="uesr">
    <open-data type="userAvatarUrl"></open-data>
</view>

<view style="margin-top:20px"></view>
<van-cell-group>
  <van-field
    value="{{ userName }}"
    clearable
    label="用户名"
    icon="question-o"
    placeholder="您暂未设置手机号"
    bind:click-icon="onClickIcon"
    bind:change="changeuserName"
  />

  <van-field
    value="{{ userphone }}"
    label="手机号"
    placeholder="您暂未设置手机号"
    border="{{ false }}"
     bind:change="changeuserphone"
  />

   <van-field
   wx:if="{{userphone == ''}}"
      value="{{ userCode }}"
      bind:change="changeuserCode"
      center
      required
      clearable
      label="短信验证码:"
      placeholder="请输入短信验证码"
      border="{{ false }}"
      use-button-slot
    >
      <van-button slot="button" bindtap="faCode" disabled='{{isDisabled}}' size="small" type="primary">{{showcode}}</van-button>
    </van-field>

</van-cell-group>

<view class=" wx">
    <view  style="width:70px"  >微信：</view>
    <view  style="padding-left:20px" wx:if="{{!isWeixin}}" bindtap="bindWx">立即绑定</view> 
    <view style="padding-left:20px" wx:if="{{isWeixin}}" >已绑定</view> 
</view>

<view class="buton">
        <van-button bindtap="btons"  type="primary">立即修改</van-button>
</view> 

<van-notify id = "van-notify" />
<van-toast id="van-toast" />