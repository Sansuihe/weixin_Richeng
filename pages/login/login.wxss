
page{
  height: 100%;
  background-size:100%;
  background-repeat:no-repeat;

 -moz-background-size:100% 100%;
  background-image: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=2807052394,944017971&fm=26&gp=0.jpg');
